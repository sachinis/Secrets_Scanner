{
  "Pattern_File_Version": "v2",
  "Allow_Dir": [
    { "dir": ".git" },
    { "dir": "vendor" }
  ],
  "Allow_File": [
    {
      "file": "src/Config/testconfig.php",
      "reason": "Just a bunch of configuration keys"
    },
    {
      "file": "src/Feature/testService.php",
      "reason": "Enter Reason here."
    },
    {
      "file": "files/sample.conf",
      "reason": "Another file"
    },
    {
      "file": "/files/test.json"
    }
  ],
  "Allow_File_Pattern": [
    {
      "pattern": ".*_test\\.go",
      "reason": "Files ending in '_test.go' are treated as test files"
    }
  ],
  "Allow_String_Pattern": [
    {
      "pattern": "wJalrXUtnFEMI/K8MDENG/bPxRfiCYEXAMPLEKEY",
      "reason": "Example key"
    },
    {
      "pattern": "key[0-9]{3}",
      "reason": "Test allow string"
    },
    {
      "pattern": "secrets-scanner",
      "reason": "test allowed string"
    }
  ],
  "Allow_File_Line": [
    {
      "file": "files/test/scripts/test.php",
      "line": 39,
      "reason": "Simply a path for a file"
    },
    {
      "file": "src/test.php",
      "line": 44,
      "reason": "Just a regular expression"
    }
  ]
}
